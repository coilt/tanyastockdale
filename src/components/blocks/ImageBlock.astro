---
const { data } = Astro.props;
const alignmentClasses = {
  left: "mr-auto",
  center: "mx-auto",
  right: "ml-auto"
};
const alignment: keyof typeof alignmentClasses = data.alignment || "center";
---

<section class="py-12 px-6">
  <div class="container mx-auto max-w-4xl">
    {data.image?.data && (
      <figure class={`${alignmentClasses[alignment]} max-w-2xl`}>
        <img 
          src={data.image.data.attributes.url} 
          alt={data.caption || ""} 
          class="rounded-lg w-full h-auto"
        />
        {data.caption && (
          <figcaption class="mt-3 text-sm text-gray-600 text-center">
            {data.caption}
          </figcaption>
        )}
      </figure>
    )}
  </div>
</section>
