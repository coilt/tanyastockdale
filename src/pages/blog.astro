---
import "@fontsource/playfair-display/700.css";
import "@fontsource/quicksand";
import "../styles/globals.css";
import { getGhostPosts } from "../lib/ghost";
import Layout from "@/layouts/Layout.astro";

const posts = await getGhostPosts();
console.log(Astro.url);
---

<Layout title="Tanya Stockdale's blog">
  <main class="mt-20">
    {
      posts.map((post: GhostPost) => (
        <div class="bg-white py-24 sm:py-8 ">
          <div class="mx-auto max-w-7xl px-6 lg:px-8">
            <div class="mx-auto max-w-2xl">
              <article class="flex max-w-xl flex-col items-start justify-between">
                {post.feature_image && (
                  <a href={`/blog/${post.slug}`} class="w-full">
                    <img
                      src={post.feature_image}
                      alt={post.title}
                      class="w-full object-cover rounded-lg mb-6"
                    />
                  </a>
                )}

                <div class="gap-x-4 text-xs self-end">
                  <time datetime={post.published_at} class="text-gray-500">
                    {new Date(post.published_at).toLocaleDateString("en-US", {
                      year: "numeric",
                      month: "short",
                      day: "numeric",
                    })}
                  </time>
                </div>
                <div class="group relative mt-2 mb-6">
                  <h3 class=" px-4 mb-0 mt-4 text-lg font-semibold text-gray-900">
                    {" "}
                    <a href={`/blog/${post.slug}`}>{post.title}</a>
                  </h3>
                  <p class="p-4 mt-0 text-md/6 text-gray-600">
                    {post.excerpt}{" "}
                  </p>
                  <a
                    href={`/blog/${post.slug}`}
                    class="tap-overlay absolute inset-0 bg-white opacity-0 group-hover:opacity-100 ring-1 ring-slate-200 shadow-xl mix-blend-multiply transition-all duration-300 rounded-lg"
                    aria-label="Read more about {post.title}"
                  />
                </div>
              </article>
            </div>
          </div>
        </div>
      ))
    }
  </main>
</Layout>
